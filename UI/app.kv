<ConfirmBtn@Button>
    background_normal: ''
    background_color: (0, 1, .25, .75)
    color: (1, 1, 1, .75)
    font_size: 35
    bold: False

<CancelBtn@Button>
    text: "CANCEL"
    background_normal: ''
    background_color: (1, 0, 0.25, .65)
    color: (1, 1, 1, .75)
    font_size: 35
    bold: False

<SelectionLabel@Label>
    size_hint: (1, None)
    text_size: self.size
    halign: "center"
    valign: "middle"

<ResolutionCheckbox@CheckBox>
    background_checkbox_normal: ''

<MainWindow>
    id: main_window

    input_file_chooser: input_file_chooser
    output_folder_chooser: output_folder_chooser
    confirm_btn: confirm_btn

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        spacing: 20
        padding: 50

        canvas.before:
            Color:
                rgba: (1, 1, 1, 0.25)
            Rectangle:
                pos: self.pos
                size: self.size


        Accordion:
            orientation: 'horizontal'

            AccordionItem:
                id: acc_file_chooser
                title: 'Input file'
                collapse: False

                GridLayout:
                    cols: 1
                    rows: 2

                    Label:
                        size_hint_y: 0.05
                        text: "Allowed formats: .mov, .mp4"

                    FileChooserListView:
                        id: input_file_chooser
                        size_hint_y: 0.75
                        path: root.cwd
                        filters: ['*.mov', '*.mp4']
                        on_selection: root.update_labels('selected_file', self.selection)

            AccordionItem:
                id: acc_ouput_folder
                title: "Output folder"
                collapse: True

                GridLayout:
                    cols: 1
                    rows: 2

                    Label:
                        size_hint_y: 0.05
                        text: "Choose output folder"

                    FileChooserIconView:
                        id: output_folder_chooser
                        size_hint_y: 0.75
                        path: root.cwd
                        dirselect: True
                        filters: ['']
                        on_selection: root.update_labels('output_folder', self.selection)

            AccordionItem:
                id: acc_resolutions
                title: "Resolutions"
                collapse: True

                GridLayout:
                    cols: 2
                    rows: 4
                    size_hint: (1, 1)
                    padding: 15
                    spacing: 20

                    ResolutionCheckbox:
                        text: "1920x1080"
                        on_active: root.checkbox_click(self.active, self.text)

                    Label:
                        text: "1920x1080"

                    ResolutionCheckbox:
                        text: "1080x1920"
                        on_active: root.checkbox_click(self.active, self.text)

                    Label:
                        text: "1080x1920"

                    ResolutionCheckbox:
                        text: "1080x1080"
                        on_active: root.checkbox_click(self.active, self.text)

                    Label:
                        text: "1080x1080"

                    ResolutionCheckbox:
                        text: "1350x1080"
                        on_active: root.checkbox_click(self.active, self.text)

                    Label:
                        text: "1350x1080"

        GridLayout:
            cols: 2
            rows: 4
            size_hint: (1, 0.35)

            Label:
                text: "Input file: "
                size_hint: (0.25, 0.25)
                halign: "left"

            SelectionLabel:
                id: selected_file
                text: 'No selection'

            Label:
                text: "Output folder: "
                size_hint: (0.05, 0.25)
                halign: "left"

            SelectionLabel:
                id: output_folder
                text: 'No selection'

            Label:
                text: "Resolutions: "
                size_hint: (0.05, 0.25)
                halign: "left"

            SelectionLabel:
                id: resolutions_list
                text: 'No selection'

        GridLayout:
            cols: 2
            rows: 1
            spacing: 50
            size_hint: (1, 0.1)

            CancelBtn:
                text: "Cancel"
                on_release: root.close_app()

            ConfirmBtn:
                id: confirm_btn
                text: "Confirm"
                disabled: True
                on_release: root.process_file()
