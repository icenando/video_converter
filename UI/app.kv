<ConfirmBtn@Button>
    background_normal: ''
    background_color: (0, 1, .25, .5)
    color: (1, 1, 1, .80)
    font_size: 35
    bold: False

<CancelBtn@Button>
    text: "CANCEL"
    background_normal: ''
    background_color: (1, 0, .25, .5)
    color: (1, 1, 1, .80)
    font_size: 35
    bold: False

<SelectionLabel@Label>
    size_hint: (1, 0.05)

<ResolutionCheckbox@CheckBox>
    size_hint: (1, 0.05)

<MainWindow>
    id: main_window

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        spacing: 20
        padding: 50

        canvas.before:
            Color:
                rgba: (1, 1, 1, 0.25)
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            size_hint_y: 0.025
            text: "Allowed formats: .mov, .mp4"

        FileChooserListView:
            id: input_file_chooser
            size_hint_y: 0.75
            path: root.cwd
            filters: ['*.mov', '*.mp4']
            on_selection: selected_file.text = self.selection and self.selection[0] or 'No file selected'
            on_selection: root.check_valid_selections()

        GridLayout:
            cols: 2
            rows: 4
            size_hint: (1, 0.15)
            padding: 15
            spacing: 20
            canvas.before:
                Color:
                    rgba: (1, 1, 1, 0.25)
                Rectangle:
                    pos: self.pos
                    size: self.size

            ResolutionCheckbox:
                id: checkbox_test
                text: "1920x1080"
                on_active: root.checkbox_click(self, self.active, self.text)

            Label:
                text: "1920x1080"

            ResolutionCheckbox:
                id: checkbox_test
                text: "1080x1920"
                on_active: root.checkbox_click(self, self.active, self.text)

            Label:
                text: "1080x1920"

            ResolutionCheckbox:
                id: checkbox_test
                text: "1080x1080"
                on_active: root.checkbox_click(self, self.active, self.text)

            Label:
                text: "1080x1080"

            ResolutionCheckbox:
                id: checkbox_test
                text: "1350x1080"
                on_active: root.checkbox_click(self, self.active, self.text)

            Label:
                text: "1350x1080"

        SelectionLabel:
            id: selected_file
            text: 'No file selected'

        GridLayout:
            cols: 2
            rows: 1
            spacing: 50
            size_hint: (1, 0.05)

            CancelBtn:
                text: "Cancel"
                on_release: root.close_app()

            ConfirmBtn:
                id: confirm_btn
                text: "Confirm"
                disabled: True
                on_release: root.choose_file_folder("file", selected_file.text)
